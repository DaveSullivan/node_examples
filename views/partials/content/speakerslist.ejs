<article class="speakerslist">
  <section class="layout">
    <div class="speakers">
      <% artists.forEach(function(item) { %>
        <article class="artist group">
          <h3> <%= item.title %> <span class="small">showing
            <a href="/scenes/<%= item.shortname %>">
            <%= item.name %></a><span></h3>
            <p><a href="/scenes/<%= item.shortname %>">
              <img class="speaker" src="/images/scenes/<%= item.shortname %>.JPG" alt="Photo of <%= item.name %>"></a>
              <% if (page!= 'home') { %>
                <% if (page === 'artistList') { %>
                  <%- item.summary %>
                <% } else { %>
                  <%- item.description %>
                <% } %>
              <% } %>
            </a></p>
        </article>
      <% }); %>
    </div>
  </section>
</article>